<Window x:Class="Paradiso.MessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MessageWindow" Height="135" Width="337" WindowStyle="None" WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="Transparent" 
        BorderThickness="5"
        AllowsTransparency="True">
    <Border>
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="10" Opacity="0.8" 
                Color="Black" />
        </Border.Effect>    
        <DockPanel Background="LightGray">
        <StackPanel DockPanel.Dock="Bottom" HorizontalAlignment="Center">
                <Button Background="Gainsboro" Width="80" Padding="5" Margin="0,10" Click="Button_Click">OK</Button>
        </StackPanel>
        <TextBlock Name="MessageText" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Arial" FontSize="14" TextWrapping="Wrap" UseLayoutRounding="True" Padding="5">Hello World!!!</TextBlock>
        </DockPanel>
    </Border>
</Window>
