<Window x:Class="Paradiso.GiftCertificateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GiftCertificateWindow" Height="118" Width="343" WindowStyle="None" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" HorizontalAlignment="Center">
            <Button Margin="5" Padding="5" Width="80" Name="AddGiftCertificate" Click="AddGiftCertificate_Click">Add</Button>
            <Button Margin="5" Padding="5" Width="80" Name="CancelGiftCertifcate" Click="CancelGiftCertifcate_Click">Cancel</Button>
        </StackPanel>
        <TextBox Name="GiftCertificateName" CharacterCasing="Upper" TextAlignment="Center" FontWeight="Bold" FontSize="24" VerticalAlignment="Center" TabIndex="0"></TextBox>
    </DockPanel>
</Window>
