<Window x:Class="Paradiso.MessageYesNoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MessageYesNoWindow" Height="152" Width="391" WindowStyle="None" WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="Transparent" 
        BorderThickness="5"
        AllowsTransparency="True"
        >
    <Border>
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.8" 
                Color="Black" />
        </Border.Effect>
        <DockPanel Background="LightGray">
            <StackPanel DockPanel.Dock="Bottom" HorizontalAlignment="Center" Orientation="Horizontal">
                <Button Background="Gainsboro" Name="YesButton" Width="80" Padding="5" Margin="5,10" Click="YesButton_Click">YES</Button>
                <Button Background="Gainsboro" Name="NoButton" Width="80" Padding="5" Margin="5,10" Click="NoButton_Click">NO</Button>
            </StackPanel>
            <TextBlock Name="MessageText" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Arial" FontSize="14" >Hello World!</TextBlock>
        </DockPanel>
    </Border>
</Window>
