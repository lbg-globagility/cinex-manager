<controls:MetroWindow x:Class="Paradiso.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:local="clr-namespace:Paradiso"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"                       
        Title="TICKETING TERMINAL" MinHeight="768" MinWidth="1024" Icon="/Paradiso;component/Images/icon-ticketingterminal.png" Loaded="MetroWindow_Loaded" WindowState="Maximized" Closing="MetroWindow_Closing">
    <DockPanel>
        <DockPanel.Resources>
            <local:NotifyingDateTime x:Key="notifyingDate"/>
        </DockPanel.Resources>
        <DockPanel DockPanel.Dock="Top" Background="#780001">
            <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                <Image Source="Images/img-logoholder.jpg" Width="80" Margin="10, 5"/>
                <TextBlock FontSize="16" Foreground="Yellow" VerticalAlignment="Center" Name="TicketingTerminalTitle"></TextBlock>
            </StackPanel>
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <DockPanel Name="Dashboard"  MouseLeftButtonDown="UserPanel_MouseLeftButtonDown"  MouseRightButtonUp="UserPanel_MouseRightButtonUp">
                    <DockPanel.ContextMenu>
                        <ContextMenu>
                            <DockPanel>
                                <Button Name="Logout" Click="Logout_Click">Logout</Button>
                            </DockPanel>
                        </ContextMenu>
                    </DockPanel.ContextMenu>
                    <StackPanel Name="UserPanel" Orientation="Horizontal" >
                        <Image Source="Images/icon-user.png" Width="19"/>
                        <TextBlock FontSize="12" Foreground="White" VerticalAlignment="Center" Margin="8, 0">User:</TextBlock>
                        <TextBlock FontSize="12" Foreground="White" VerticalAlignment="Center" Name="UserName"/>
                    </StackPanel>
                </DockPanel>
                <!--Popup Name="myPopup" IsOpen="False" PlacementTarget="{Binding ElementName=Dashboard}" Placement="Center">
                    <Label Name="myLabel" Content="This is a popup!" Foreground="Blue"/>
                </Popup-->
                <Line X1="10" Y1="14" X2="10" Y2="35" Stroke="White" StrokeThickness="2"></Line>
                <TextBlock FontSize="12" Foreground="White" VerticalAlignment="Center" Margin="8,0" Name="CurrentDateTime" Text="{Binding Source={StaticResource notifyingDate},Path=Now, StringFormat={x:Static local:Constants.DateTimeUiFormat}}"></TextBlock>
                <StackPanel Width="60">
                    <TextBlock x:Name="Memory" Margin="0,5,0,0"  TextAlignment="Center" Text="000" FontSize="28" FontWeight="Bold" />
                </StackPanel>
            </StackPanel>
            <xctk:DateTimePicker VerticalAlignment="Center" Margin="20,0" Background="Transparent" Foreground="LightYellow" FontSize="20" TextAlignment="Center" Name="ScreeningDate" Format="Custom" FormatString="MMMM dd, yyyy" TimeFormat="Custom" TimePickerVisibility="Collapsed" ShowButtonSpinner="False" AutoCloseCalendar="True" ValueChanged="ScreeningDate_ValueChanged" AllowSpin="False" ClipValueToMinMax ="True"/>
            <!--TextBlock VerticalAlignment="Center" Foreground="LightYellow" FontSize="20" Margin="20, 0" TextAlignment="Center" Name="ScreeningDate"></TextBlock-->
        </DockPanel>
        <ContentControl Name="MainContent"></ContentControl>
        <!--Frame Name="MainFrame" JournalOwnership="OwnsJournal" Source="LoginPage.xaml" NavigationUIVisibility="Hidden" Margin="5" Navigated="Frame_Navigated" /-->
    </DockPanel>    
</controls:MetroWindow>
